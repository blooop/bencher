{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "autoformat",
			"type": "shell",
			"command": "ruff . --fix && black ."
		},
		{
			"label": "sa: Set Active File",
			"type": "shell",
			"command": "echo ${file} > ${workspaceFolder}/.vscode/cfg/active_file.cfg; echo Setting the current file: ${file} as the active file."
		},
		{
			"label": "ra: Run Active File",
			"type": "shell",
			"command": "RUNFILE=$(cat ${workspaceFolder}/.vscode/cfg/active_file.cfg); echo Running file: $RUNFILE; python3 $RUNFILE"
		}
	]
}